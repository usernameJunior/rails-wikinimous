<header class="text-center">
  <h1>All articles</h1>
  <%= link_to 'Write a new article', new_article_path %>
</header>

<div class="container">
  <ul>
    <% @articles.reverse.each do |article| %>
      <li>
        <h2><%= link_to article.title, article_path(article) %></h2>
        <p><%= article.content.first(50) %>
        <%='[...]' if article.content.length > 50 %></p>
      </li>
    <% end %>
  </ul>
</div>
